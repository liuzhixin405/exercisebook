@using SeckillPro.Com.Model
@model List<SeckillPro.Com.Model.CrmModel.MoOrderInfo>

@{
    ViewData["Title"] = "订单列表";
}
<div class="row text-center">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-center">订单号</th>
                <th class="text-center">商品名称</th>
                <th class="text-center">单价</th>
                <th class="text-center">数量</th>
                <th class="text-center">总价</th>
                <th class="text-center">订单状态</th>
                <th class="text-center">创建时间</th>
            </tr>
        </thead>
        @foreach (var item in Model.OrderByDescending(b=>b.OrderId))
            {
            <tr>
                <td>@item.OrderId</td>
                <td title="@item.MoShopping.Des">@item.MoShopping.Name</td>
                <td>@item.MoShopping.Price</td>
                <td>@item.Num</td>
                <td>@(item.Num * item.MoShopping.Price)</td>
                <td style="color:red;font-size:16px">@Enum.GetName(typeof(EnumHelper.EmOrderStatus), item.OrderStatus)</td>
                <td>@item.CreatTime</td>
            </tr>
        }
    </table>
    <a href="/home/index" class="btn btn-default">去抢购</a>
</div>
