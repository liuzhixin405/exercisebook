@using SeckillPro.Com.Model
@model SeckillPro.Com.Model.ApiModel.MoOrderDetailRp
@{
    ViewData["Title"] = "抢购 - " + @Model.MoShopping.Name;
}
<div class="row">
    <form >
        <div class="form-group">
            <label for="Name">订单号：@Model.OrderId</label>
        </div>
        <div class="form-group">
            <label for="Name">名称：@Model.MoShopping.Name</label>
        </div>
        <div class="form-group">
            <label for="Price">价格：@Model.MoShopping.Price 元</label>
        </div>
        <div class="form-group">
            <label for="MaxGouNum">数量：@Model.Num</label>
        </div>
        <div class="form-group">
            <label for="Des">描述：@Model.MoShopping.Des</label>
        </div>
