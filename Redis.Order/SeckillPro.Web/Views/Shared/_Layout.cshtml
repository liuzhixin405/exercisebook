@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="keywords" content="" />
    <meta name="description" content="">
    <meta name="author" content="神牛步行3">
    <title>爽购网 - @ViewData["Title"]</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
    </environment>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">爽购网</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="ul_modules">
                    <li><a href="/home/index">抢购活动</a></li>
                    <li><a href="/home/orderlist">我的订单</a></li>
                    <li><a href="/home/ShoppingManage">添加抢购商品</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding-top:30px">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>
                <a href="/home/about" target="_blank">关于我们</a>
                <a href="/home/contact" target="_blank">联系我们</a>
            </p>
            <p>
                &copy; @DateTime.Now.Year - 爽购网
                <img width="58" height="50" title="爱留图" src="~/images/ailiutu_user.png" />
                作者 - <a href="http://www.cnblogs.com/wangrudong003/" target="_blank">神牛步行3</a>
            </p>
        </footer>
    </div>
</body>
</html>
<environment names="Development">
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>