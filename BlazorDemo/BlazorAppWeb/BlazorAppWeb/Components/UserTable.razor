@using BlazorAppWeb.Components;
@inherits UserTableBase;
<h1>@Count</h1>

@if (UserInfos.Count > 0)
{

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>部门</th>
                <th>姓名</th>
                <th>出生日期</th>
                <th>性别</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var em in UserInfos)
            {
                <tr>
                    <td>@em.UserID</td>
                    <td>@em.DeptId</td>
                    <td>@em.UserName</td>
                    <td>@em.BirthDate</td>
                    <td>@em.Gender</td>
                    <td>
                        <a href="@($"userdetail/{em.UserID}")" class="btn btn-primary btn-sm">
                            详情
                        </a>
                        |
                        <a href="@($"createuser/{em.UserID}")" class="btn btn-primary btn-sm">
                            编辑
                        </a>

                        <a href="javascript:void(0)" @onclick="() => Delete(em.UserID)" class="btn btn-primary btn-sm">
                            删除
                        </a>
                        @*<a  onclick="() => Delete(em.UserID)" class="btn btn-primary btn-sm">
                                删除
                            </a>*@

                        @*<td class="align-middle">*@
                        @*<button type="button" class="btn btn-danger" @onclick="() => Delete(em.UserID)">删除</button>*@
                        @*</td>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading...
    </span>
}