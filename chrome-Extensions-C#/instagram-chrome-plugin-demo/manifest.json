{
	"manifest_version": 2,
	"name": "Chrome插件demo",
	"version": "1.0",
	"description": "最简单的Chrome插件demo，需要快速做一个简单的插件时可以基于这个仓库开发",
	"author": "sxei",
	"icons":
	{
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": 
	{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": 
	[
		{
			"matches": ["https://www.baidu.com/*","https://www.instagram.com/*"],
			"js": ["content-script.js"]
		}
	],
	"permissions":
	[
		"cookies",
		"tabs", 
		"contextMenus", 
		"notifications", 
		"webRequest",
		"webRequestBlocking", 
		"storage",
		"http://*/*", 
		"https://*/*" 
	],
	"web_accessible_resources": 
	[
		"inject.js"
	]
}