@model DateTime?
@if(System.Web.HttpContext.Current.Request.Browser.Browser == "Chrome")
{
    @Html.TextBoxFor(m => m, new { type="date", value=Model })
}
else
{
@Html.TextBox("", Model.HasValue ? Model.Value.ToString("dd/MM/yyyy") : "", new { @class = "date" })
<script type="text/javascript">
    $(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").datepicker({ dateFormat: "dd/mm/yy" });
    });
</script>
}