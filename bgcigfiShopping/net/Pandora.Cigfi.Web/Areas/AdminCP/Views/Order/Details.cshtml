@model Pandora.Cigfi.Models.Cigfi.Order.Order
@{
    ViewData["Title"] = "订单详情";
}
<h2>订单详情</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">订单号</dt>
        <dd class="col-sm-10">@Model.OrderNo</dd>
        <dt class="col-sm-2">用户ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
        <dt class="col-sm-2">状态</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">总金额</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>
        <dt class="col-sm-2">支付金额</dt>
        <dd class="col-sm-10">@Model.PayAmount</dd>
        <dt class="col-sm-2">支付状态</dt>
        <dd class="col-sm-10">@(Model.PayStatus == "已支付" ? "已支付" : "未支付")</dd>
        <dt class="col-sm-2">下单时间</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
        <dt class="col-sm-2">备注</dt>
        <dd class="col-sm-10">@Model.Remark</dd>
    </dl>
    <h4>商品明细</h4>
    <table class="table">
        <thead>
            <tr>
                <th>商品名</th>
                <th>单价</th>
                <th>数量</th>
                <th>总价</th>
            </tr>
        </thead>
        <tbody>
        @if (ViewBag.Items != null)
        {
            foreach (var item in ViewBag.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</div>
