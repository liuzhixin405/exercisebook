@model Pandora.Cigfi.Models.Cigfi.Banner
@{
    ViewBag.title = "Banner详情";
}
<h2>Banner详情</h2>
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">图片</dt>
    <dd class="col-sm-10"><img src="@Model.ImageUrl" style="max-width:240px;max-height:120px;" /></dd>
    <dt class="col-sm-2">跳转链接</dt>
    <dd class="col-sm-10">@Model.LinkUrl</dd>
    <dt class="col-sm-2">排序</dt>
    <dd class="col-sm-10">@Model.SortOrder</dd>
    <dt class="col-sm-2">是否启用</dt>
    <dd class="col-sm-10">@(Model.IsActive ? "是" : "否")</dd>
    <dt class="col-sm-2">创建时间</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    <dt class="col-sm-2">更新时间</dt>
    <dd class="col-sm-10">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">返回</a>