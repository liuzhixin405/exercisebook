@model Pandora.Cigfi.Models.Cigfi.Bill
@{
    ViewBag.title = "新增账单";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal m-t" }))
            {
                <div class="form-group">
                    <label class="col-sm-3 control-label">用户ID：</label>
                    <div class="col-sm-8">
                        <input asp-for="UserId" class="form-control" required placeholder="填写用户ID">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">账单类型：</label>
                    <div class="col-sm-8">
                        <input asp-for="Type" class="form-control" required placeholder="收入/支出/返佣/提现等">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">金额：</label>
                    <div class="col-sm-8">
                        <input asp-for="Amount" class="form-control" required placeholder="填写金额">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">描述：</label>
                    <div class="col-sm-8">
                        <textarea asp-for="Description" class="form-control" placeholder="描述信息"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">创建时间：</label>
                    <div class="col-sm-8">
                        <input asp-for="CreatedAt" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-3">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> 提交 </button>
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-close"></i> 取消 </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
