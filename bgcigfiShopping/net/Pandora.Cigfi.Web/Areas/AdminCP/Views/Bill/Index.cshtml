@model IEnumerable<Pandora.Cigfi.Models.Cigfi.Bill>
@{
    ViewBag.title = "账单列表";
}
<div class="wrapper wrapper-content ">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div class="panel panel-default">
                <div class="panel-heading">账单列表</div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>用户ID</th>
                        <th>类型</th>
                        <th>金额</th>
                        <th>描述</th>
                        <th>创建时间</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserId</td>
                        <td>@item.Type</td>
                        <td>@item.Amount</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
