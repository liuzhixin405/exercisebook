@model IEnumerable<Pandora.Cigfi.Models.Cigfi.CategoryViewModel>
@{
    ViewBag.title = "商品分类管理";
}
<div class="wrapper wrapper-content ">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div class="panel panel-default">
                <div class="panel-heading">分类列表</div>
            </div>
            <div id="toolbar" class="btn-group">
                <a href="@Url.Action("Add")" class="btn btn-outline btn-default">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                </a>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>分类名称</th>
                        <th>父级ID</th>
                        <th>排序</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ParentId</td>
                        <td>@item.SortOrder</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-xs btn-primary">编辑</a>
                            <form asp-action="Delete" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-xs btn-danger" onclick="return confirm('确定删除？');">删除</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
