@model Pandora.Cigfi.Models.Cigfi.Category
@{
    ViewBag.title = "新增分类";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <form asp-action="Add" method="post" class="form-horizontal m-t" id="addCategoryForm">
                <div class="form-group">
                    <label class="col-sm-3 control-label">分类名称：</label>
                    <div class="col-sm-8">
                        <input asp-for="Name" class="form-control" required placeholder="填写分类名称">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">父级ID：</label>
                    <div class="col-sm-8">
                        <input asp-for="ParentId" class="form-control" placeholder="填写父级ID">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">排序：</label>
                    <div class="col-sm-8">
                        <input asp-for="SortOrder" class="form-control" value="0" placeholder="填写排序">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-3">
                        <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> 提交 </button>
                        <a asp-action="Index" class="btn btn-default"><i class="fa fa-close"></i> 取消 </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
